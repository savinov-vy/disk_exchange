<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://registerScreen.caption"
        messagesPack="com.company.exchange.web.screens.register">
    <layout>
        <grid align="MIDDLE_CENTER"
              spacing="true">
            <columns count="2"/>
            <rows>
                <row>
                    <label value="Login" align="MIDDLE_LEFT"/>
                    <textField id="loginField"
                               required="true"/>
                </row>
                <row>
                    <label value="Password" align="MIDDLE_LEFT"/>
                    <passwordField id="passwordField"
                                   required="true"/>
                </row>
                <row>
                    <label value="ConfirmPassword" align="MIDDLE_LEFT"/>
                    <passwordField id="confirmPasswordField"
                                   required="true"/>
                </row>
                <row>
                    <hbox align="MIDDLE_CENTER"
                          colspan="2"
                          spacing="true">
                        <button id="okBtn"
                                align="TOP_RIGHT"
                                caption="OK"/>
                        <button id="cancelBtn"
                                caption="Cancel"/>
                    </hbox>
                </row>
            </rows>
        </grid>
    </layout>
</window>