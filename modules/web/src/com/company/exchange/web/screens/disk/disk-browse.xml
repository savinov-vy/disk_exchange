<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://diskBrowse.caption"
        focusComponent="disksTable"
        messagesPack="com.company.exchange.web.screens.disk">
    <data>
        <collection id="disksDc"
                    class="com.company.exchange.entity.Disk"
                    view="disk-view-browse">
            <loader id="disksDl">
                <query>
                    <![CDATA[select e from exchange_Disk e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="disksTable"
            spacing="true">
        <filter id="filter"
                applyTo="disksTable"
                dataLoader="disksDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="disksTable"
                    width="100%"
                    dataContainer="disksDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
                <action id="take" trackSelection="true"/>
                <action id="give" trackSelection="true"/>
            </actions>
            <columns>
                <column id="name"/>
                <column id="takenItem.user" caption="msg://diskTaken"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="disksTable.create"/>
                <button id="editBtn" action="disksTable.edit"/>
                <button id="removeBtn" action="disksTable.remove"/>
                <button id="takeBtn" caption="msg://btn.takeDisk" stylename="primary" action="disksTable.take"/>
                <button id="giveBtn" caption="msg://btn.giveDisk" stylename="friendly" action="disksTable.give"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
